var lcd = 0;
var address = 63; "NOTE(Richo): 39 is a common address too"
var cols = 16;
var rows = 2;

prim lcd_init0;
prim lcd_init1;
prim lcd_print;
prim lcd_print_str;

task setup() {
	lcd = lcd_init1(lcd_init0(address, cols, rows));
}

func ready() {
  return lcd > 0;
}

proc print(line, value) {
  until ready();
  lcd_print(lcd, line, value);
}

proc print_str(line, value) {
  until ready();
  lcd_print_str(lcd, line, value);
}